{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/inbox.css') }}">
{% endblock %}

{% block title 'PasVuPasLu - Envoyer un messagerie privée' %}

{% block body %}
    <div class="content-inbox">
        <div class="midcont w-100" style="margin: 0 5rem;display: block;min-height: auto;box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.25);">
            <div class="head">
                <div class="avatarbox">
                    <div class="avatar_overlay">
                        <img src="{% if userInbox.auter.photo is defined %}{{ asset('assets/images/profil/'~userInbox.auter.photo) }}{% else %}{{ asset('assets/images/avatars/d.png') }}{% endif %}">
                    </div>
                </div>
                <h4>
                {% if app.user.auter.pseudo is defined%}
                    {{ userInbox.auter.pseudo }}
                {% else %}
                    {{ userInbox.nom ~ ' ' ~ userInbox.prenom }}
                {% endif %}
            </div>

            <div class="bottomchat mt-0">
                {{ form_start(form) }}
                    {{ form_errors(form.msg) }}
                    {{ form_widget(form.msg, { 'attr': {'placeholder': 'Envoyer un message à ' ~ userInbox.nom~' '~userInbox.prenom, 'style': 'height:100%', 'cols': '30', 'rows': '10'} }) }}
                    <button class="btn-default btn-forum" style="margin: 1rem; float: right; color: white;">Envoyer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <style>
        ul.list-unstyled > li {
            background: #ff0000ad;
            color: white;
            text-align: center;
            padding: .51rem;
        }
        @media (max-width: 425px) {
            .midcont {
                margin: .5rem!important;
            }
        }
    </style>
{% endblock %}
